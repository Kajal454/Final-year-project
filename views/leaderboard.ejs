<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Leaderboard | Vani Unnati</title>
  <link rel="stylesheet" href="../stylesheets/maicons.css">
  <link rel="stylesheet" href="../stylesheets/bootstrap.css">
  <link rel="stylesheet" href="../vendor/animate/animate.css">
  <link rel="stylesheet" href="../stylesheets/theme.css">
</head>
<body>
  <!-- Back to top button -->
  <div class="back-to-top"></div>

  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky" data-offset="500">
      <div class="container">
        <a href="#" class="navbar-brand"><b>Vani</b> <span class="text-primary">Unnati</span></a>

        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse" id="navbarContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/practice">Practice</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/khel">Khel</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile">Profile</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/leaderboard">Leaderboard</a>
            </li>
            <li class="nav-item">
              <a class="btn btn-primary ml-lg-2" href="/register">Register Here</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <div class="container mt-5">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Leaderboard</h2>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Rank</th>
                <th>Username</th>
                <th>Last Active</th>
                <th>Speech Accuracy</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((user, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= user.username %></td>
                  <td><%= new Date(user.lastLogin).toLocaleDateString() %></td>
                  <td>
                    <div class="progress">
                      <div class="progress-bar bg-success" role="progressbar" 
                           
                           style="width: 20px;"
                           aria-valuenow="<%= user.speechAccuracy %>" 
                           aria-valuemin="0" aria-valuemax="100">
                        <%= user.speechAccuracy %>%
                      </div>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script src="../js/jquery-3.5.1.min.js"></script>
  <script src="../js/bootstrap.bundle.min.js"></script>
  <script src="../js/theme.js"></script>
</body>
</html>