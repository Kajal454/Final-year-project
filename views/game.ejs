  <script>
  const questions = [
    { 
      word: 'नमस्ते', 
      correctOption: 2, 
      meaning: 'Hello',
      audioIds: ['q1_audio1', 'q1_audio2', 'q1_audio3', 'q1_audio4']
    },
    { 
      word: 'धन्यवाद', 
      correctOption: 0, 
      meaning: 'Thank you',
      audioIds: ['q2_audio1', 'q2_audio2', 'q2_audio3', 'q2_audio4']
    },
    { 
      word: 'आप कैसे हैं', 
      correctOption: 1, 
      meaning: 'How are you?',
      audioIds: ['q3_audio1', 'q3_audio2', 'q3_audio3', 'q3_audio4']
    },
    { 
      word: 'शुभ प्रभात', 
      correctOption: 3, 
      meaning: 'Good morning',
      audioIds: ['q4_audio1', 'q4_audio2', 'q4_audio3', 'q4_audio4']
    },
    { 
      word: 'शुभ रात्रि', 
      correctOption: 2, 
      meaning: 'Good night',
      audioIds: ['q5_audio1', 'q5_audio2', 'q5_audio3', 'q5_audio4']
    },
    { 
      word: 'मैं ठीक हूं', 
      correctOption: 1, 
      meaning: 'I am fine',
      audioIds: ['q6_audio1', 'q6_audio2', 'q6_audio3', 'q6_audio4']
    },
    { 
      word: 'क्या हाल है', 
      correctOption: 0, 
      meaning: 'How are you?',
      audioIds: ['q7_audio1', 'q7_audio2', 'q7_audio3', 'q7_audio4']
    },
    { 
      word: 'फिर मिलेंगे', 
      correctOption: 3, 
      meaning: 'See you again',
      audioIds: ['q8_audio1', 'q8_audio2', 'q8_audio3', 'q8_audio4']
    },
    { 
      word: 'खुश रहो', 
      correctOption: 2, 
      meaning: 'Be happy',
      audioIds: ['q9_audio1', 'q9_audio2', 'q9_audio3', 'q9_audio4']
    },
    { 
      word: 'स्वागत है', 
      correctOption: 1, 
      meaning: 'Welcome',
      audioIds: ['q10_audio1', 'q10_audio2', 'q10_audio3', 'q10_audio4']
    }
  ];

  let currentQuestion = 0;
  let score = 0;

  function initGame() {
    displayQuestion();
    updateProgressBar();
  }

  function displayQuestion() {
    if (currentQuestion < questions.length) {
      document.getElementById('question-number').textContent = currentQuestion + 1;
      document.getElementById('hindi-word').textContent = 
        `${questions[currentQuestion].word} (${questions[currentQuestion].meaning})`;
      document.getElementById('answer-select').value = '';
      updateProgressBar();
    } else {
      showResults();
    }
  }

  function updateProgressBar() {
    const progress = (currentQuestion / questions.length) * 100;
    document.getElementById('progress-bar').style.width = `${progress}%`;
    document.getElementById('progress-bar').setAttribute('aria-valuenow', progress);
  }

  function playAudio(optionNumber) {
    const audioId = questions[currentQuestion].audioIds[optionNumber];
    const audio = document.getElementById(audioId);
    // Stop all other audio first
    document.querySelectorAll('audio').forEach(a => {
      a.pause();
      a.currentTime = 0;
    });
    audio.play();
  }

  function nextQuestion() {
    const selectedOption = document.getElementById('answer-select').value;
    
    if (!selectedOption) {
      alert('Please select an answer before continuing');
      return;
    }

    if (parseInt(selectedOption) === questions[currentQuestion].correctOption) {
      score++;
      showFeedback(true);
    } else {
      showFeedback(false);
    }

    currentQuestion++;
    displayQuestion();
  }

  function showFeedback(isCorrect) {
    const feedbackEl = document.createElement('div');
    feedbackEl.className = `alert alert-${isCorrect ? 'success' : 'danger'} alert-dismissible fade show`;
    feedbackEl.innerHTML = `
      ${isCorrect ? 'Correct!' : 'Incorrect!'} 
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    `;
    document.querySelector('.card-body').insertBefore(feedbackEl, document.getElementById('game-container'));
    
    // Auto dismiss after 2 seconds
    setTimeout(() => {
      feedbackEl.remove();
    }, 2000);
  }

  function showResults() {
    document.getElementById('game-container').style.display = 'none';
    document.getElementById('results-section').style.display = 'block';
    document.getElementById('final-score').textContent = score;
  }

  function restartGame() {
    currentQuestion = 0;
    score = 0;
    document.getElementById('game-container').style.display = 'block';
    document.getElementById('results-section').style.display = 'none';
    displayQuestion();
  }

  // Initialize the game when page loads
  initGame();
  </script>

